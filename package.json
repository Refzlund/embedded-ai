{
	"version": "1.0.0",
	"name": "embedded-ai",
	"description": "Electron and SvelteKit integration",
	"author": "arthur@refzlund.com",
	"license": "",
	"private": true,
	"scripts": {
		"dev": "concurrently --kill-others pnpm:ts-watch \"vite dev\" \"electron src/electron/.build/main.cjs\"",
		"dev:package": "pnpm build && electron-builder --config electron-builder.config.json --dir",
		"package": "pnpm build && electron-builder --config electron-builder.config.json",
		"ts-watch": "tsc -w --preserveWatchOutput -p tsconfig.electron.json",
		"ts-build": "tsc -p tsconfig.electron.json",
		"vite-build": "vite build",
		"build": "pnpm ts-build && pnpm vite-build"
	},
	"main": "src/electron/.build/main.cjs",
	"type": "module",
	"dependencies": {
		"electron-serve": "^1.1.0",
		"electron-window-state": "^5.0.3"
	},
	"devDependencies": {
		"@floating-ui/core": "^1.3.0",
		"@iconify/icons-fluent": "^1.2.23",
		"@iconify/svelte": "^3.1.4",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.20.2",
		"@types/dompurify": "^3.0.2",
		"@types/katex": "^0.16.0",
		"@types/marked": "^5.0.0",
		"@types/showdown": "^2.0.1",
		"concurrently": "^8.2.0",
		"dompurify": "^3.0.3",
		"electron": "^25.1.0",
		"electron-builder": "^23.6.0",
		"electron-reloader": "^1.2.3",
		"gpt-tokenizer": "^2.1.1",
		"highlight.js": "^11.8.0",
		"jsonfile": "^6.1.0",
		"katex": "^0.16.7",
		"marked": "^5.1.0",
		"marked-extended-tables": "^1.0.6",
		"marked-katex-extension": "^2.1.0",
		"marked-xhtml": "^1.0.1",
		"mkdirp": "^3.0.1",
		"pug": "^3.0.2",
		"sass": "^1.63.3",
		"scss-color-var": "^1.1.0",
		"showdown": "^2.1.0",
		"svelte": "^3.59.1",
		"svelte-awesome-pug": "^0.1.3",
		"svelte-floating-ui": "^1.5.3",
		"svelte-preprocess": "^5.0.4",
		"typescript": "^5.1.3",
		"universalify": "^2.0.0",
		"vite": "^4.3.9",
		"vite-plugin-fs": "1.0.0-beta.6"
	}
}
